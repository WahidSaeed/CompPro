    <script src="~/assets/global/plugins/horizontal-timeline/horizontal-timeline.js" type="text/javascript"></script>

    <script type="text/javascript">

        $(document).ready(function () {
            $('[data-item-tag]').tooltip({
                content: function () {
                    return $(this).attr('title-tooltip')
                }
            });
        });

        $('[data-subs]').click(function () {
            var btnObj = this;
            var regId = $(btnObj).attr('data-regId');
            var l = Ladda.create(btnObj);
            l.start();
            $.post("/Library/Subscribe",
                { regId },
                function (response) {
                    if (response.status === 200) {
                        toastr.success(response.message);
                        if (response.message != "Regulation has been subscribed.") {
                            $(btnObj).removeClass('SubOn').addClass('Suboff');
                        }
                        else {
                            $(btnObj).removeClass('Suboff').addClass('SubOn');
                        }
                    }
                    else {
                        toastr.error(response.message);
                    }
                }, "json")
                .always(function () { l.stop(); });
        });



        function getFilteredDetails() {

            var searchTerm = $('#txtSearchTerms').val();
            var detailTag = (@detailTag.Count() > 0 ? Array.from($('[data-detail]:checked').map(function () { return $(this).val() })) : []);
            $.post("/Library/_GetFilteredDetails",
                { id: @ViewBag.RegId, detailTag, searchTerm },
                function (response) {
                    $('#dvDetail').html(response);
                    $('[data-item-tag]').tooltip({
                        content: function () {
                            return $(this).attr('title-tooltip')
                        }
                    });
                }, "html");
        }

    </script>
    <script>
        $('[data-detail]').change(function () {
            getFilteredDetails();
        });

        $('#txtSearchTerms').on('input propertychange paste', function () {
            getFilteredDetails();
        });

    </script>
}
