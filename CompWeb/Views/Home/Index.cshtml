@using CompData.ViewModels.Library
@model List<GetAllRegulationGroupBySourceViewModel>
@{
    ViewData["Title"] = "Home Page";

    var sources = ViewBag.Sources as List<CompData.Models.Library.RegulationSource>;
    var updatedRegulation = ViewBag.UpdatedRegulation as List<CompData.Models.Library.Regulation>;
    var subscribedRegType = ViewBag.SubscribedRegType as List<int>;
}

@section Styles {

    <link href="~/assets/global/plugins/ladda/ladda-themeless.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/global/plugins/bootstrap-toastr/toastr.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/global/plugins/bootstrap-datepicker/css/bootstrap-datepicker3.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/global/plugins/bootstrap-datetimepicker/css/bootstrap-datetimepicker.min.css" rel="stylesheet" type="text/css" />
    <style>
        .validation {
            outline: 1px solid red !important;
        }
    </style>
}

<!-- BEGIN PAGE HEAD-->
<div class="page-head">
    <div class="container">
        <!-- BEGIN PAGE TITLE -->
        <div class="page-title">

            <ul class="page-breadcrumb breadcrumb">
                @foreach (var source in sources)
                {
                    var routeData = new Dictionary<string, string> { { "sourceId", source.SourceId.ToString() } };
                    <li>
                        <h3>
                            @if (source.SourceId.Equals(ViewBag.SourceSelected))
                            {
                                <a asp-controller="Home" asp-action="Index" asp-all-route-data="routeData"><b>@source.FullName</b></a>
                            }
                            else
                            {
                                <a asp-controller="Home" asp-action="Index" asp-all-route-data="routeData">@source.FullName</a>
                            }
                            <small>|</small>
                        </h3>
                    </li>
                }
            </ul>
        </div>
        <!-- END PAGE TITLE -->
    </div>
</div>
<!-- END PAGE HEAD-->
<!-- BEGIN PAGE CONTENT BODY -->
<div class="page-content">
    <div class="container">
        <!-- BEGIN PAGE CONTENT INNER -->
        <div class="page-content-inner">
            <div class="search-page search-content-2">
                <div class="row">
                    <div class="col-md-8 portlet light ">
                        @foreach (var sourceItem in Model)
                        {
                            <div class="col-md-6">
                                <div class="portlet light">
                                    <div class="portlet-title">
                                        <div class="caption">
                                            <i class="icon-edit font-dark"></i>
                                            <span class="caption-subject font-dark bold uppercase">@sourceItem.TypeTitle</span>
                                        </div>
                                        <div class="actions">
                                            <button type="button" class="btn btn-default mt-ladda-btn ladda-button btn-circle" data-type="@sourceItem.TypeId" data-source="@ViewBag.DefaultSourceId" data-regulation-modal data data-style="slide-down" data-spinner-color="#333">
                                                <span class="ladda-label">
                                                    <i class="fa fa-plus-circle"></i>
                                                </span>
                                                <span class="ladda-spinner"></span><div class="ladda-progress" style="width: 0px;"></div>
                                            </button>
                                            @{
                                                var cssSubsStyle = subscribedRegType.Contains(sourceItem.TypeId) ? "btn btn-info mt-ladda-btn ladda-button btn-circle" : "btn btn-default mt-ladda-btn ladda-button btn-circle";
                                            }
                                            <button type="button" class="@cssSubsStyle" data-style="slide-down" data-spinner-color="#333" data-type="@sourceItem.TypeId" data-source="@ViewBag.DefaultSourceId" data-subs>
                                                <span class="ladda-label">
                                                    <i class="fa fa-rss"></i>
                                                </span>
                                                <span class="ladda-spinner"></span><div class="ladda-progress" style="width: 0px;"></div>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="portlet-body">
                                        <ul>
                                            @foreach (var Regulation in sourceItem.RegulationsList.OrderByDescending(x => x.Views))
                                            {
                                                <li>
                                                    <a href="Library/Regulation/@Regulation.RegulationId">@Regulation.RegulationTitle</a>
                                                </li>
                                            }
                                        </ul>
                                        <small><a href="Library/Source/@ViewBag.DefaultSourceId/Type/@sourceItem.TypeId">See all @sourceItem.TotalRegulation documents</a></small>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="col-md-4">
                        <!-- BEGIN PORTLET-->
                        <div class="portlet light ">
                            <div class="portlet-title">
                                <div class="caption">
                                    <i class="icon-edit font-dark"></i>
                                    <span class="caption-subject font-dark bold uppercase">Recently Updated</span>
                                </div>
                            </div>
                            <div class="portlet-body">
                                <ul>
                                    @foreach (var Regulation in updatedRegulation)
                                    {
                                        <li>
                                            <a href="Library/Regulation/@Regulation.RegId">@Regulation.RegulationTitle</a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                        <!-- END PORTLET-->
                    </div>
                </div>
            </div>
        </div>
        <!-- END PAGE CONTENT INNER -->
    </div>
</div>
<div id="modalSaveRegulation" class="modal fade modal-scroll in" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog" style="width: 400px">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Create Regulation</h4>
            </div>
            <div class="modal-body">
                <form role="form">
                    <input type="hidden" id="input-type" />
                    <input type="hidden" id="input-source" />
                    <div class="form-body">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Reference Number" id="input-reference">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Title" id="input-title">
                        </div>
                        <div class="form-group">
                            <div class="input-group date date-picker" data-date-format="dd-mm-yyyy" data-date-start-date="+0d">
                                <input type="text" class="form-control" readonly="" placeholder="Issue Date" id="input-issueDate">
                                <span class="input-group-btn">
                                    <button class="btn default" type="button">
                                        <i class="fa fa-calendar"></i>
                                    </button>
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="mt-checkbox-inline">
                                <label class="mt-checkbox">
                                    <input type="checkbox" id="input-isFinal"> This is final version
                                    <span></span>
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group date date-picker" data-date-format="dd-mm-yyyy" data-date-start-date="+0d">
                                <input type="text" class="form-control" readonly="" placeholder="Effective Date" id="input-effectiveDate">
                                <span class="input-group-btn">
                                    <button class="btn default" type="button">
                                        <i class="fa fa-calendar"></i>
                                    </button>
                                </span>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn dark btn-outline">Close</button>
                <button type="button" class="btn green" data-save-regulation>Save Regulation</button>
            </div>
        </div>
    </div>
</div>
<div id="confirmModal" class="modal fade modal-scroll in" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog" style="width: 400px">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">New Regulation Has Been Saved</h4>
            </div>
            <div class="modal-body">
                <p>Do you wish to continue?</p>
            </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn dark btn-outline">Cancel</button>
                <button type="button" onclick="redirectToRegulation()" class="btn green">Continue</button>
            </div>
        </div>
    </div>
</div>
<!-- END PAGE CONTENT BODY -->

@section Scripts {
    <script src="~/assets/global/plugins/bootstrap-toastr/toastr.min.js" type="text/javascript"></script>
    <script src="~/assets/pages/scripts/ui-toastr.min.js" type="text/javascript"></script>
    <script src="~/assets/global/plugins/ladda/spin.min.js" type="text/javascript"></script>
    <script src="~/assets/global/plugins/ladda/ladda.min.js" type="text/javascript"></script>
    <script src="~/assets/pages/scripts/ui-buttons-spinners.min.js" type="text/javascript"></script>
    <script src="~/assets/pages/scripts/ui-extended-modals.min.js" type="text/javascript"></script>
    <script src="~/assets/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js" type="text/javascript"></script>

    <script type="text/javascript">

        var regulation = {
            id: '',
            referenceNumber: '',
            title: '',
            issueDate: '',
            isFinal: '',
            effectiveDate: '',
            sourceId: '',
            typeId: ''
        };

        function redirectToRegulation()
        {
            window.location.href = "/Library/Regulation/" + regulation.id + "/Edit";
        }

        $('[data-regulation-modal]').click(function () {
            var btnObj = this;
            var sourceId = $(btnObj).attr('data-source');
            var typeId = $(btnObj).attr('data-type');
            $('#input-source').val(sourceId);
            $('#input-type').val(typeId);
            $('#modalSaveRegulation').modal('show');
        });

        $('[data-save-regulation]').click(function () {
            
            var referenceNumber = $('#input-reference');
            var title = $('#input-title');
            var issueDate = $('#input-issueDate');
            var isFinal = $('#input-isFinal').is(':checked');
            var effectiveDate = $('#input-effectiveDate');
            var sourceId = $('#input-source');
            var typeId = $('#input-type');

            if (!(referenceNumber.val() && title.val() && effectiveDate.val() && issueDate.val()))
            {
                toastr.error('Fill all fields to continue.');
                return;
            }

            regulation.referenceNumber = referenceNumber.val();
            regulation.title = title.val();
            regulation.issueDate = issueDate.val();
            regulation.isFinal = isFinal;
            regulation.effectiveDate = effectiveDate.val();
            regulation.sourceId = sourceId.val();
            regulation.typeId = typeId.val();

            $.post("/Library/SaveRegulation", regulation,
                function (response) {
                    if (response.status === 200) {
                        regulation.id = response.data;
                        $('#modalSaveRegulation').modal('hide');
                        toastr.success(response.message);
                        $('#confirmModal').modal('show');
                    }
                    else {
                        toastr.error(response.message);
                    }
                }, "json");

        });

        $('[data-regulation]').click(function () {
            var btnObj = this;
            var typeId = $(btnObj).attr('data-type');
            var sourceId = $(btnObj).attr('data-source');
            $('#modalSaveRegulation').modal('show');
        });

        $('[data-subs]').click(function () {
            var btnObj = this;
            var typeId = $(btnObj).attr('data-type');
            var sourceId = $(btnObj).attr('data-source');
            var l = Ladda.create(btnObj);
            l.start();
            $.post("/Library/Subscribe",
                {
                    typeId: typeId,
                    sourceId: sourceId
                },
                function (response) {
                    if (response.status === 200) {
                        toastr.success(response.message);
                        if ($(btnObj).css('btn-default') != null) {
                            $(btnObj).removeClass('btn-default').addClass('btn-info');
                        }
                        else {
                            $(btnObj).removeClass('btn-info').addClass('btn-default');
                        }
                    }
                    else {
                        toastr.error(response.message);
                    }
                }, "json")
                .always(function () { l.stop(); });
        });


    </script>
}