                                                                <label class="control-label">Full Name</label>
                                                                <input type="text" data-name placeholder="Your Full Name" value="@Model.FullName" class="form-control">
                                                            </div>
                                                            <div class="form-group">
                                                                <label class="control-label">Personal Number</label>
                                                                <input type="text" data-contact placeholder="Your Personal Contact" value="@Model.PhoneNumber" class="form-control">
                                                            </div>
                                                            <div class="form-group">
                                                                <label class="control-label">Designation</label>
                                                                <input type="text" data-designation placeholder="Your Designation" value="@Model.Designation" class="form-control">
                                                            </div>
                                                            <div class="form-group">
                                                                <label class="control-label">About</label>
                                                                <textarea class="form-control" data-about rows="3" placeholder="About Your Job Experience">@Model.About</textarea>
                                                            </div>
                                                            <div class="form-group">
                                                                <label class="control-label">Linkden</label>
                                                                <input type="text" data-link placeholder="Your Linkedin Profile Link" value="@Model.WebsiteURL" class="form-control">
                                                            </div>
                                                            <div class="form-group">
                                                                <label class="control-label">Is User Enable?</label>
                                                                <br />
