                                                            </div>
                                                        </form>
                                                    </div>
                                                    <!-- END PERSONAL INFO TAB -->
                                                    <!-- REGULATORY INFO TAB -->
                                                    <div class="tab-pane" id="tab_1_2">
                                                        <form role="form" action="#">
                                                            <div class="form-group">
                                                                <select id="seletedsource" class="form-control select2-multiple select2-hidden-accessible" multiple="" name="SourceIds" tabindex="-1" aria-hidden="true">
                                                                    @foreach (var item in regulationSources)
                                                                    {
                                                                        if (selectedRegulationSources.Contains(item))
                                                                        {
                                                                            <option selected value="@item.SourceId">@item.FullName</option>
                                                                        }
                                                                        else
                                                                        {
                                                                            <option value="@item.SourceId">@item.FullName</option>
                                                                        }
                                                                    }
                                                                </select>
                                                            </div>
                                                            <div class="margiv-top-10">
                                                                <a href="javascript:;" data-save-regulatory class="btn green"> Save Regulatory </a>
                                                            </div>
                                                        </form>
                                                    </div>
