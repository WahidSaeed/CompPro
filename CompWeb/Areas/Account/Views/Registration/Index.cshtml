@model CRMWeb.Areas.Account.Models.RegisterViewModel
@inject CRMData.Configurations.Extensions.Utility utility
@{
    Layout = null;
    ViewData["Title"] = "BIBLIOTECH";
    string termsCondition = utility.GetAppSetting(AppSettings.TermsAndCondition);
}

<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <meta content="Preview page of Metronic Admin Theme #4 for " name="description" />
    <meta content="" name="author" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700&subset=all" rel="stylesheet" type="text/css" />
    <link href="~/css/begin.global.mandatory.style.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/begin.page.level.plugins.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/begin.theme.global.style.min.css" rel="stylesheet" id="style_components" type="text/css" />
    <link href="~/assets/pages/css/login-4.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/customcss/custom.css" rel="stylesheet" type="text/css" />
    <link rel="shortcut icon" href="favicon.ico" />
    <style type="text/css">
        .login .mt-checkbox > span:after {
            border-color: darkgrey;
        }
    </style>
</head>

<body class=" login">
    <div class="logo">
    </div>
    <div class="logo">
    </div>
    <div class="content" style="background: #f0f0f0;min-height: 400px;">
        <!-- BEGIN REGISTRATION FORM -->
        <div asp-validation-summary="All" class="text-danger"></div>
        <form class="create-account" method="post">
            <h3 class="form-title" style="color: #227937;text-align: center;font-weight: 600;">@ViewData["Title"]</h3>
            <p style="color: #227937;text-align: center;"> Get Started </p>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9" asp-for="@Model.UserName"></label>
                <div class="input-icon">
                    <input class="form-control placeholder-no-fix" asp-for="@Model.UserName" autocomplete="off" placeholder="Username" style="text-align:center" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9" asp-for="@Model.Password"></label>
                <div class="input-icon">
                    <input class="form-control placeholder-no-fix" asp-for="@Model.Password" autocomplete="off" id="register_password" placeholder="Password" style="text-align:center" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9" asp-for="@Model.ConfirmPassword">Re-type Your Password</label>
                <div class="controls">
                    <div class="input-icon">
                        <input class="form-control placeholder-no-fix" asp-for="@Model.ConfirmPassword" autocomplete="off" placeholder="Re-type Your Password" style="text-align:center" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="mt-checkbox" style="color: #227937">
                    <input type="checkbox" required name="tnc" /> I agree to the
                    <a data-toggle="modal" href="#basic" style="color:#368549"><u>Terms & Conditions</u></a>
                    <span style="border: 1px solid #919191;margin-top:7px"></span>
                </label>
                <div id="register_tnc_error"> </div>
            </div>
            <div class="form-actions">
                <button type="submit" id="register-submit-btn" class="btn" style="background: #bf9000;color: white;width: 300px;margin-top: 10px"> Sign Up </button>
                <a id="register-back-btn" asp-controller="Login" class="btn" style="background: #872410;color: white;width: 300px;margin-top: 10px"> Back </a>

            </div>
        </form>
        <div class="modal fade in" id="basic" tabindex="-1" role="basic" aria-hidden="true" style="display: none; padding-right: 17px;">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                        <h4 class="modal-title">Terms of Service</h4>
                    </div>
                    <div class="modal-body">@Html.Raw(termsCondition)</div>
                    <div class="modal-footer">
                        <button type="button" class="btn dark btn-outline" data-dismiss="modal">Close</button>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
        <!-- END REGISTRATION FORM -->
    </div>
    <div class="copyright"> Copyright &copy; 2020. All Rights Reserved</div>
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/core.plugins.min.js" type="text/javascript"></script>
    <script src="~/js/page.begin.level.plugins.min.js" type="text/javascript"></script>
    <script src="~/assets/global/scripts/app.min.js" type="text/javascript"></script>
    <script src="~/assets/pages/scripts/login-4.min.js" type="text/javascript"></script>
    <script src="~/assets/pages/scripts/ui-modals.min.js" type="text/javascript"></script>
</body>
</html>

