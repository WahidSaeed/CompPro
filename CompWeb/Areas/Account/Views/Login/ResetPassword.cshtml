<body class="">
    <div class="page-lock">
        <div class="page-logo">
            <a class="brand" href="index.html">
                @*<img src="http://new.tpllife.com/wp-content/uploads/2018/06/TPL-Life.png" width="200" alt="">*@
            </a>
        </div>
        <div class="page-body">
            <div class="lock-head"> Change Password </div>
            <div class="lock-body">
                <div class="lock-cont">
                    <div class="lock-item">
                        <div class="pull-left lock-avatar-block">
                            <img src="../assets/pages/media/profile/photo3.jpg" class="lock-avatar">
                        </div>
                    </div>
                    <div class="lock-item lock-item-full">
                        <form class="lock-form pull-left" method="post">
                            <h4>Reset your password</h4>
                            <input value="@ViewBag.Code" name="token" type="hidden"/>
                            <div class="form-group">
                                <input class="form-control placeholder-no-fix" type="email" required autocomplete="off" placeholder="Enter Your Email" disabled name="email" value="@ViewBag.Email" />
                                <input class="form-control placeholder-no-fix" type="password" required autocomplete="off" placeholder="New Password" name="Npassword" />
                                <input class="form-control placeholder-no-fix" type="password" required autocomplete="off" placeholder="Confirm Password" name="Cpassword" />
                            </div>
                            <div class="form-actions">
                                <button type="submit" class="btn red uppercase">Change Password</button>
                            </div>
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <br />
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
